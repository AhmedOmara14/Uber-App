<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings">

        <ImageButton
            android:id="@+id/backtodrive"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="361dp"
            android:layout_marginRight="361dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back">

        </ImageButton>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image1"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_below="@+id/backtohome"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile_image"
            app:civ_border_color="#FF000000" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/profile_image1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:hint="Username"

            android:paddingLeft="10dp">

        </EditText>

        <EditText
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/username"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:hint="car name"
            android:paddingLeft="10dp">

        </EditText>

        <Button
            android:id="@+id/update_btn"
            style="@style/Theme.AppCompat.DayNight.Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/backbtn"
            android:text="Update"
            android:textColor="#fff"
            android:textSize="20dp">

        </Button>
    </RelativeLayout>
</layout>